											selectedKey="{CreateModel>/Zrefnr}" value="{CreateModel>/ZlibNr}">
											<core:Item key="{RefNr}" text="{LibNr}"/>
										</ComboBox>
										<Label text="{i18n>typedobjet}" required="true"/>
